---
const groups = [
  {
    label: 'Languages & Runtimes',
    items: ['Kotlin', 'Java', 'Node.js', 'Python', 'Gradle'],
  },
  {
    label: 'Cloud & Infrastructure',
    items: ['AWS', 'GCP', 'Kubernetes', 'AWS Lambda', 'Terraform', 'Docker', 'Helm', 'GitOps'],
  },
  {
    label: 'Data',
    items: ['PostgreSQL', 'MongoDB', 'Redis', 'DynamoDB', 'OpenSearch'],
  },
  {
    label: 'Messaging & Streaming',
    items: ['Apache Kafka', 'RabbitMQ', 'AWS SNS', 'Google Pub/Sub'],
  },
  {
    label: 'Observability',
    items: ['Datadog', 'Prometheus', 'Grafana', 'OpenTelemetry', 'ELK Stack', 'PagerDuty'],
  },
  {
    label: 'CI/CD',
    items: ['GitHub Actions', 'GitLab CI', 'Flux', 'SonarQube'],
  },
  {
    label: 'Practices',
    items: ['SRE', 'DevOps', 'Microservices', 'Distributed Systems', 'Event-Driven Architecture', 'CQRS / Event Sourcing', 'Domain-Driven Design', 'Agile'],
  },
];
---

<section id="skills" class="py-24 px-6 scroll-mt-14">
  <div class="max-w-4xl mx-auto">
    <p class="font-mono text-xs text-teal mb-12 tracking-widest uppercase">Skills</p>
    <div class="space-y-8">
      {groups.map(({ label, items }) => (
        <div class="grid sm:grid-cols-[160px_1fr] gap-2 sm:gap-8 items-start">
          <p class="font-mono text-xs text-ink-muted uppercase tracking-wider sm:pt-1.5">{label}</p>
          <div class="flex flex-wrap gap-2">
            {items.map((item) => (
              <span class="text-sm text-ink-muted px-3 py-1 border border-edge rounded">
                {item}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
