---
const links = [
  { href: '#about', label: 'About' },
  { href: '#experience', label: 'Experience' },
  { href: '#projects', label: 'Projects' },
  { href: '#skills', label: 'Skills' },
  { href: '#contact', label: 'Contact' },
];
---

<header class="fixed top-0 inset-x-0 z-50 bg-canvas border-b border-edge px-6">
  <nav class="max-w-4xl mx-auto h-14 flex items-center justify-between">
    <a href="#" id="nav-name" class="font-mono text-sm text-teal opacity-0 transition-opacity duration-300">Jonas Holtkamp</a>
    <ul class="hidden sm:flex items-center gap-8">
      {links.map(({ href, label }) => (
        <li>
          <a href={href} class="text-sm text-ink-muted hover:text-ink transition-colors duration-150">
            {label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
